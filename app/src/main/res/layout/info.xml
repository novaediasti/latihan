<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|center"
    android:background="@drawable/bg">
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="~Info Tentang Aplikasi~"
        android:gravity="top|center"
        android:textColor="#FFF"
        android:textSize="10pt"
        android:background="@android:drawable/toast_frame">
    </TextView>
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi Reminder Catatan Harian ini dibuat sebagai
tugas UAS dari mata kuliah praktikum
Mobile Programming. Selain itu aplikasi yang kelompok
kami buat ini sebagai implementasi dari proses pembelajara
mata kuliah Mobile Programming yang kami terima. Selebihnya semoga
aplikasi ini bisa bermanfaat."
        android:gravity="top|center"
        android:textColor="#FFF"
        android:textSize="7pt"
        android:background="@android:drawable/toast_frame">
    </TextView>
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="By : Informatika A 2008 - Arli Ramdhani, Ai Nurprianti,
Achmad Amin N, Asep Miftah H, Anisa"
        android:gravity="top|center"
        android:textColor="#FFF"
        android:textSize="7pt"
        android:background="@android:drawable/toast_frame">
    </TextView>
    <Button
        android:text="Kembali"
        android:id="@+id/btnBack"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:onClick="backtoMenu">
    </Button>
</LinearLayout>